{
  "imports": {
    "hono": "jsr:@hono/hono@4.7.4",
    "zod": "npm:zod@3.24.2",
    "zod-validator": "npm:@hono/zod-validator@0.4.3",
    "result": "npm:neverthrow@8.2.0",
    "ulid": "npm:ulid@2.3.0",
    "generate-unique-id": "npm:generate-unique-id@2.0.3",
    "deep-object-diff": "npm:deep-object-diff@1.1.9"
  },
  "tasks": {
    "dev": "deno run -A --env=.env.local --watch --unstable-kv --unstable-cron src/main.ts",
    "clean": "deno fmt -q && deno lint ./src"
  },
  "lint": {
    "include": [
      "src/",
      "tests/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 180,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "src/",
      "tests/"
    ]
  }
}