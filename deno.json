{
  "imports": {
    "hono": "https://deno.land/x/hono@v3.9.0/mod.ts",
    "bearerAuth": "https://deno.land/x/hono@v3.9.0/middleware/bearer-auth/index.ts",
    "zod": "https://esm.sh/zod@3.22.4",
    "result": "https://esm.sh/ts-results@3.3.0",
    "ulid": "https://esm.sh/ulid@2.3.0",
    "generate-unique-id": "https://esm.sh/generate-unique-id@2.0.3",
    "deep-object-diff": "https://esm.sh/deep-object-diff@1.1.9"
  },
  "tasks": {
    "dev": "deno run -A --env=.env.local --watch --unstable src/main.ts",
    "clean": "deno fmt -q && deno lint ./src"
  },
  "lint": {
    "include": [
      "src/",
      "tests/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 180,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "src/",
      "tests/"
    ]
  }
}